<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.alessandro.androcard.Dados_PessoaActivity">

    <ImageView
        android:layout_width="187dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <Button
        android:id="@+id/bntEu"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:background="@drawable/usuario_vermelho" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bntDadosFisicos"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corpinho" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bntHistorico"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:background="@drawable/historico" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bntRegistrosMedicos"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:background="@drawable/registros_medicos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sair"
            android:layout_width="332dp"
            android:layout_height="33dp"
            android:background="@drawable/login_out" />

    </LinearLayout>

</LinearLayout>
